@model List<Empleado>

@{
    ViewData["Title"] = "PaginarGrupoEmpleados";
    int numRegistros = (int)ViewData["REGISTROS"];
    int numPagina = 1;
}

<h1>PaginarGrupoEmpleados</h1>

<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numRegistros; i += 3)
    {
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarGrupoEmpleados" asp-route-posicion="@i">Página @numPagina</a>
        </li>
        numPagina += 1;
    }
</ul>

<table class="table table-warning">
    <thead>
        <tr>
            <th>Id</th>
            <th>Apellido</th>
            <th>Oficio</th>
            <th>Salario</th>
            <th>Id Dept</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Empleado emp in Model)
        {
            <tr>
                <td>@emp.IdEmpleado</td>
                <td>@emp.Apellido</td>
                <td>@emp.Oficio</td>
                <td>@emp.Salario</td>
                <td>@emp.IdDepartamento</td>
            </tr>
        }

    </tbody>
</table>