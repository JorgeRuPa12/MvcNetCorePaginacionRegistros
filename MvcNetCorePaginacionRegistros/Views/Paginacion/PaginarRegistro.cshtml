@model VistaDepartamento

@{
    ViewData["Title"] = "PaginarRegistro";
}

<h1>Paginar Registro</h1>

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarRegistro" asp-route-posicion="1">Primero</a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarRegistro" asp-route-posicion="@ViewData["ANTERIOR"]">Anterior</a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarRegistro" asp-route-posicion="@ViewData["SIGUIENTE"]">Siguiente</a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarRegistro" asp-route-posicion="@ViewData["ULTIMO"]">Ultimo</a>
        </li>
    </ul>
</div>

<ul class="list-group mt-4">
    <li class="list-group-item">
        Número: @Model.IdDepartamento
    </li>
    <li class="list-group-item">
        Nombre: @Model.Nombre
    </li>
    <li class="list-group-item">
        Localidad: @Model.Localidad
    </li>
</ul>

